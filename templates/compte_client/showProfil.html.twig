{% extends 'base.html.twig' %}

{% block title %}Mes informations personnelles - RoyalTrip{% endblock %}


{% block stylesheetAccueil %}
    <link rel="stylesheet" href="{{ asset('assets/css/stylePage/styleAccueil.css') }}">

    <link rel="stylesheet" href="{{ asset('assets/css/stylePage/styleShowProfil.css') }}">


{% endblock %}

{% block content %}

    <div id="info-profil">

        <a class="lienRetour" href="{{ path('account', {'email':app.user.email}) }}"> Retour à mon compte client</a>

<br>
        <h1> <i class="fas fa-address-card"></i>     Mes coordonnées</h1>
        <br>
        <br>

        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-3">
        <h3>Mes informations personnelles</h3>
            </div>
            <div class="col-md-7">

            <p><b>Id : </b> <span>{{ client.id }}</span></p>

        <p><b>Civilité : </b> <span> {{ client.civilite }}</span></p>
        <p><b>Prénom : </b> <span> {{ client.prenom }} </span></p>
        <p><b>Nom : </b>  <span>{{ client.nom }} </span></p>
            <p><b>Né le : </b> <span> {{ client.dateNaissance|date('d/m/Y') }} </span></p>
            </div>
        </div>

        <br>
        <br>
    <div class="row">
        <div class="col-md-2"></div>

        <div class="col-md-3">
        <h3>Contact</h3>
    </div>
    <div class="col-md-7">
        <p><b>Adresse : </b> <span>{{ client.adresse }}</span></p>
        <p><b>Téléphone : </b> <span>{{ client.telephone }}</span></p>
    </div>
    </div>


        <br>
        <br>
    <div class="row">
        <div class="col-md-2"></div>

        <div class="col-md-3">
        <h3>Identifiant</h3>
    </div>
    <div class="col-md-7">
        <p><b>Email : </b> <span>{{ client.email }}</span></p>
        <p><b>Mot de passe : </b><span> {{ client.password }}</span></p>
    </div>
    </div>


        <a class="lienModif" href="{{ path('update_profil', {'id':client.id}) }}">Modifier mes coordonnées</a>

    </div>



{% endblock %}